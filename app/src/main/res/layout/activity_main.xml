<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="your name*"
                android:textAllCaps="true"
                android:textColor="@color/black_button"
                android:textSize="@dimen/_9sdp"
                android:fontFamily="@font/public_sans_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/public_sans_regular"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/edtName"
                android:inputType="textPersonName"
                android:hint="Enter Your Name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shop name*"
                android:layout_marginTop="@dimen/_13sdp"
                android:textAllCaps="true"
                android:visibility="gone"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/black_button"
                android:fontFamily="@font/public_sans_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/public_sans_regular"
                android:textSize="@dimen/_11sdp"
                android:visibility="gone"
                android:hint="Enter Your Shop Name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mobile number*"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:textAllCaps="true"
                android:textColor="@color/black_button"
                android:fontFamily="@font/public_sans_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/public_sans_regular"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/edtMobileNumber"
                android:inputType="phone"
                android:hint="Enter Your Mobile Number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email id*"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:textAllCaps="true"
                android:textColor="@color/black_button"
                android:fontFamily="@font/public_sans_semibold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/public_sans_regular"
                android:textSize="@dimen/_11sdp"
                android:inputType="textEmailAddress"
                android:id="@+id/edtEmail"
                android:hint="Enter Your Email"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/RRTop"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="SIGNUP"
                app:cornerRadius="@dimen/_5sdp"
                android:id="@+id/btnSignUp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_11sdp"
                android:backgroundTint="@color/black_button"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>